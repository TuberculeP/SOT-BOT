{
    "compilerOptions": {
      "baseUrl": ".",
      "module": "commonjs",
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "ES2022",
      "skipLibCheck": true,
      "paths": {
        "#/*": ["./src/*"],
        "@oplit/*": ["../../packages/*/src"]
      },
      "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": [
      "src",
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "ts-node": {
      "files": true
    },
  }
